<h1 class="h3 mt-3 font-weight-normal text-center">Registration Form</h1>

<%= form_for :user, url: '/users' do |f| %>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="firstName">First Name:</label>
      <%= f.text_field :first_name, class: "form-control", id: "firstName", placeholder: "Enter your first name" %>
    </div>
    <div class="form-group col-md-6">
      <label for="lastName">Last Name:</label>
      <%= f.text_field :last_name, class: "form-control", id: "lastName", placeholder: "Enter your first name" %>
    </div>
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <%= f.text_field :email, type: "email", class: "form-control", id: "email", placeholder: "Enter your email" %>
  </div>
  <div class="form-group">
    <label for="password">Password:</label>
    <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Enter your password" %>
  </div>
  <div class="form-group">
    <label for="confirmPassword">Password Confirmation:</label>
    <%= f.password_field :password_confirmation, class: "form-control", id: "confirmPassword", placeholder: "Confirm your password" %>
  </div>
  <div class="form-row mt-2">
    <%= f.submit "Register", class: "btn btn-primary" %>
  </div>

<% end %>